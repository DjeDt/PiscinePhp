#!/usr/bin/php
<?PHP
if ($argc == 4)
{
	$nbr1 = trim($argv[1]);
	$oper = trim($argv[2]);
	$nbr2 = trim($argv[3]);

	if ($oper == '+')
	    $result = $nbr1 + $nbr2;
	else if ($oper == '*')
		$result = $nbr1 * $nbr2;
	else if ($oper == '-')
		$result = $nbr1 - $nbr2;
	else if ($oper == '/')
		$result = $nbr1 / $nbr2;
	else if ($oper == '%')
		$result = $nbr1 % $nbr2;
	print("$result\n");
}
else
	print("Incorrect Parameters\n");
?>